{
  "name": "personal-blog",
  "version": "0.1.0",
  "license": "MIT",
  "author": "p1t1ch <belobeev.kirill@gmail.com>",
  "scripts": {
    "dev": "gatsby develop -H 0.0.0.0",
    "build": "gatsby build",
    "start": "gatsby serve -H 0.0.0.0 -p 8000",
    "copy-static-queries": "cp -r ./public/page-data/sq/d ./public/static",
    "storybook": "yarn copy-static-queries && start-storybook -s public -p 8080 --ci",
    "storybook:build": "yarn copy-static-queries && build-storybook -s public -o docs",
    "storybook:start": "serve docs -l 8080",
    "test": "is-ci test:coverage test:watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "is-ci test:e2e:run test:e2e:open",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "server-test 8000 cy:run",
    "test:e2e:open": "start-server-and-test dev 8000 cy:open",
    "coverage": "open ./coverage/lcov-report/index.html",
    "stats": "open ./public/report.html",
    "lint": "eslint . --ext .tsx,.ts,.mdx,.js --fix",
    "format": "prettier . --write --ignore-path .gitignore",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn format && yarn type-check && yarn test:coverage && yarn test:e2e:run",
    "clean": "gatsby clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn type-check"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,mdx,js}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "public",
    "docs",
    "coverage",
    "!.storybook"
  ],
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions",
    "last 2 ChromeAndroid major versions",
    "last 2 iOS major versions"
  ],
  "dependencies": {
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@svgr/webpack": "^5.4.0",
    "emotion-theming": "^10.0.27",
    "focus-visible": "^5.1.0",
    "gatsby": "^2.24.57",
    "gatsby-alias-imports": "^1.0.4",
    "gatsby-image": "^2.4.17",
    "gatsby-plugin-catch-links": "^2.3.11",
    "gatsby-plugin-emotion": "^4.3.10",
    "gatsby-plugin-google-analytics": "^2.3.14",
    "gatsby-plugin-manifest": "^2.4.28",
    "gatsby-plugin-netlify-cms": "^4.3.13",
    "gatsby-plugin-offline": "^3.2.27",
    "gatsby-plugin-react-helmet": "^3.3.10",
    "gatsby-plugin-sharp": "^2.6.35",
    "gatsby-plugin-svgr": "^2.0.2",
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.12",
    "gatsby-remark-autolink-headers": "^2.3.12",
    "gatsby-remark-copy-linked-files": "^2.3.14",
    "gatsby-remark-external-links": "^0.0.4",
    "gatsby-remark-images": "^3.3.29",
    "gatsby-remark-prismjs": "^3.5.11",
    "gatsby-remark-relative-images": "^2.0.2",
    "gatsby-remark-responsive-iframe": "^2.4.13",
    "gatsby-remark-smartypants": "^2.3.10",
    "gatsby-source-filesystem": "^2.3.29",
    "gatsby-transformer-remark": "^2.8.34",
    "gatsby-transformer-sharp": "^2.5.14",
    "netlify-cms-app": "^2.12.20",
    "polished": "^3.6.6",
    "prism-themes": "^1.4.0",
    "prismjs": "^1.21.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^3.11.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@testing-library/cypress": "^7.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.4",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
